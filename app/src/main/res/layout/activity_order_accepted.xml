<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderAccepted">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/signinbackground"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/correctImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/correcticon" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="265dp"
        android:layout_height="68dp"
        android:text="Your Order has been
 accepted"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/correctImg"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:text="Your items has been placcd and is on
itâ€™s way to being processed"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_track_order"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/txt2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_background"
        android:text="Track Order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/backtohome_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_track_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Back to home"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>