<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_img_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/banana"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/card_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bell Pepper Red"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1kg, Price"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card_minus_id"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/minus"
                    android:background="@drawable/counter_bg"/>
                <TextView
                    android:id="@+id/card_counter_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"/>
                <ImageButton
                    android:id="@+id/card_plus_id"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/counter_bg"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/card_cancle_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/card_price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.99$"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>